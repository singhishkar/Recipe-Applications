<Window x:Class="RecipeWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecipeWPF"
        mc:Ignorable="d"
                Title="MainWindow" Height="540" Width="960">

    <Window.Resources>
        <!-- Register the font as a resource -->
        <FontFamily x:Key="Amperzand">/fonts/#Amperzand</FontFamily>

        <!-- Define the rotation animation for the loading icon -->
        <Storyboard x:Key="LoadingAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="LoadingIcon"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                             From="0" To="360" Duration="0:0:1" />
        </Storyboard>
    </Window.Resources>

    <Grid Background="Black">
        <!-- Background Image -->
        <Grid x:Name="MainWindowBackground">
            <Grid.Background>
                <ImageBrush x:Name="img_bg"
                            ImageSource="/Icons/MainWindowBackground.png"
                    Stretch="UniformToFill"/>
            </Grid.Background>
        </Grid>

        <!-- Welcome Label -->
        <Label Content="Welcome to The Recipe Application!" 
               FontSize="40"
               Foreground="White"
               FontFamily="{StaticResource Amperzand}"
               FontWeight="Normal"
               FontStyle="Normal"
               HorizontalAlignment="Center" Margin="0,120,0,0">
        </Label>

        <!-- Loading Icon -->
        <Grid x:Name="LoadingGrid" HorizontalAlignment="Center" Margin="0,262,0,0">
            <Image x:Name="LoadingIcon" Source="/Icons/Loading icon white.png" Width="50" Height="50" Margin="0,25,0,-25">
                <Image.RenderTransform>
                    <RotateTransform Angle="0" CenterX="25" CenterY="25"/>
                </Image.RenderTransform>
            </Image>
        </Grid>

        <!-- Loading Label -->
        <Label Content="Cooking up something amazing..." 
               FontSize="25"
               Foreground="White"
               FontFamily="{StaticResource Amperzand}"
               FontWeight="Light"
               FontStyle="Normal"
               HorizontalAlignment="Center" Margin="0,342,0,-213">
        </Label>
    </Grid>
</Window>
