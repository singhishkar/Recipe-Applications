<Window x:Class="RecipeWPF.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecipeWPF"
        mc:Ignorable="d"
        Title="Menu" Height="534" Width="950">
    <Window.Resources>
        <!-- Define a custom font family resource with the key "Amperzand" -->
        <FontFamily x:Key="Amperzand">/Fonts/#Amperzand</FontFamily>
    </Window.Resources>

    <Grid>
        <!--
    The following Grid definitions are commented out. Uncomment if needed.
    
    <Grid.RowDefinitions>
        <RowDefinition Height="*" />
        <RowDefinition Height="*" />
        <RowDefinition Height="*" />
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>
    -->

        <Grid
        x:Name="gridOne" 
        Visibility="Visible" 
        HorizontalAlignment="Left" 
        Height="534" 
        Margin="0,0,0,0" 
        VerticalAlignment="Center" 
        Width="231"
        Grid.ColumnSpan="2" Grid.RowSpan="3">

            <!-- Display the main title text -->
            <TextBlock Text="Designing your next &#x0a; favorite meal..."
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   TextAlignment="Center"
                   FontFamily="{StaticResource Amperzand}"
                   FontSize="18"
                   Foreground="White"
                   FontWeight="Normal"
                   TextDecorations="Underline"
                   Height="46" Width="212" Margin="0,50,0,0" />

            <!-- Label for recipe name input -->
            <Label Content="Please enter the name of the recipe:" 
               HorizontalAlignment="Center"
               VerticalAlignment="Top"
               FontFamily="{StaticResource Amperzand}"
               FontSize="13"
               Foreground="White"
               FontWeight="Normal"
               Height="30" Width="182" Margin="0,127,0,0" />

            <!-- Label for number of ingredients input -->
            <Label x:Name="lblNumIngreds" 
               Content="Please enter the number of ingredients" 
               HorizontalAlignment="Center"
               VerticalAlignment="Top"
               FontFamily="{StaticResource Amperzand}"
               FontSize="13"
               Foreground="White"
               FontWeight="Normal"
               Height="30" Width="202" Margin="0,187,0,0" />

            <!-- TextBox for number of ingredients input -->
            <TextBox x:Name="textboxNumIngreds"
                 HorizontalAlignment="Center" 
                 FontFamily="{StaticResource Amperzand}"
                 Foreground="Black"
                 Height="19" 
                 Margin="0,274,0,0" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top" 
                 Width="202" />

            <!-- Button to enter ingredients and steps -->
            <Button x:Name="btnEnterIngredsandSteps" 
                Content="Enter Ingredients &amp; Steps" 
                Click="btnEnterIngredsandSteps_Click" 
                FontFamily="{StaticResource Amperzand}"
                FontSize="13"
                FontWeight="Light"
                Foreground="DarkRed"
                Background="Orange"
                BorderBrush="Black"
                BorderThickness="2"
                VerticalAlignment="Top"
                HorizontalAlignment="Center"
                Width="181" Height="37" Margin="0,312,0,0" />

            <!-- Label for number of steps input -->
            <Label Content="Please enter the number of steps" 
               HorizontalAlignment="Left"
               VerticalAlignment="Center"
               FontFamily="{StaticResource Amperzand}"
               FontSize="13"
               Foreground="White"
               FontWeight="Normal"
               Height="30" Width="172" Margin="34,0,0,0" />

            <!-- TextBox for number of steps input -->
            <TextBox x:Name="textBoxnumSteps" 
                 HorizontalAlignment="Center" 
                 FontFamily="{StaticResource Amperzand}"
                 Foreground="Black"
                 Height="19" 
                 Margin="0,212,0,0" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top" 
                 Width="202" />

            <!-- TextBox for recipe name input -->
            <TextBox x:Name="textboxRecipeName" 
                 HorizontalAlignment="Center" 
                 FontFamily="{StaticResource Amperzand}"
                 Foreground="Black"
                 Height="19" 
                 Margin="0,150,0,0" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top" 
                 Width="201" />

            <!-- Button to save and display the recipe -->
            <Button x:Name="btnsaveanddisplay" 
                Content="Save &amp; Display"  
                Click="btnsaveanddisplay_Click" 
                FontFamily="{StaticResource Amperzand}"
                FontSize="13"
                FontWeight="Light"
                Foreground="DarkGreen"
                Background="LightGreen"
                BorderBrush="Black"
                BorderThickness="2"
                VerticalAlignment="Top"
                HorizontalAlignment="Center"
                Width="180" Height="37" Margin="0,364,0,0" />

            <!-- Set the background image for the grid -->
            <Grid.Background>
                <ImageBrush x:Name="main_background"
                        ImageSource="/Icons/B.png"
                        Stretch="UniformToFill"/>
            </Grid.Background>
        </Grid>

        <Grid
    x:Name="gridTwo" 
    Visibility="Visible" 
    HorizontalAlignment="Right" 
    Height="124" 
    VerticalAlignment="Top" 
    Width="709" 
    Grid.RowSpan="1">

            <!-- Exit button -->
            <Button Content="Exit" 
            FontFamily="{StaticResource Amperzand}"
            FontSize="15"
            FontWeight="Light"
            Foreground="White"
            Background="DarkRed"
            BorderBrush="White"
            BorderThickness="2"
            VerticalAlignment="Top"
            HorizontalAlignment="Right"
            Width="86" Height="24" Margin="0,0,0,0" 
            Click="Button_Click">
            </Button>

            <!-- Title text for Filters section -->
            <TextBlock Text="Filters"
               HorizontalAlignment="Center"
               VerticalAlignment="Top"
               TextAlignment="Center"
               FontFamily="{StaticResource Amperzand}"
               FontSize="18"
               Background="DarkRed"
               Foreground="White"
               FontWeight="Normal"
               TextDecorations="Underline"
               Height="24" Width="250" Margin="0,10,0,0" />

            <!-- Label for Maximum Calories input -->
            <Label Content="Maximum Calories" 
           HorizontalAlignment="Left"
           VerticalAlignment="Top"
           FontFamily="{StaticResource Amperzand}"
           FontSize="13"
           Foreground="LightGoldenrodYellow"
           Background="DarkRed"
           FontWeight="Normal"
           Height="24" Width="173" Margin="23,62,0,0" />

            <!-- TextBox for Maximum Calories input -->
            <TextBox x:Name="textboxMaxCal" 
             HorizontalAlignment="Left" 
             FontFamily="{StaticResource Amperzand}"
             Foreground="Black"
             Height="17" 
             Margin="24,91,0,0" 
             TextWrapping="Wrap" 
             VerticalAlignment="Top" 
             Width="124" />

            <!-- Search button for Maximum Calories -->
            <Button x:Name="SearchMaxCal" 
            IsEnabled="False" 
            FontFamily="{StaticResource Amperzand}"
            Foreground="Black"
            Content="Search" 
            FontSize="10"
            HorizontalAlignment="Left" 
            Margin="153,91,0,0" 
            VerticalAlignment="Top" 
            Height="17"
            Width="43" 
            Click="SearchMaxCal_Click" />

            <!-- Label for Food Group selection -->
            <Label Content="Food Group" 
           HorizontalAlignment="Left"
           VerticalAlignment="Top"
           FontFamily="{StaticResource Amperzand}"
           FontSize="13"
           Foreground="LightGoldenrodYellow"
           Background="DarkRed"
           FontWeight="Normal"
           Height="24" Width="172" Margin="230,62,0,0" />

            <!-- ComboBox for Food Group selection -->
            <ComboBox x:Name="comboboxsearchFoodGroup" 
              HorizontalAlignment="Left" 
              FontFamily="{StaticResource Amperzand}"
              Foreground="Black"
              Height="17" 
              Margin="230,91,0,0" 
              VerticalAlignment="Top" 
              Width="124">
                <ComboBoxItem>Vegetables</ComboBoxItem>
                <ComboBoxItem>Fruits</ComboBoxItem>
                <ComboBoxItem>Grains</ComboBoxItem>
                <ComboBoxItem>Protein Foods</ComboBoxItem>
                <ComboBoxItem>Dairy</ComboBoxItem>
                <ComboBoxItem>Oils and Solid Fats</ComboBoxItem>
                <ComboBoxItem>Added Sugars</ComboBoxItem>
                <ComboBoxItem>Beverages</ComboBoxItem>
            </ComboBox>

            <!-- Search button for Food Group -->
            <Button x:Name="SearchFoodGroup" 
            IsEnabled="False" 
            FontFamily="{StaticResource Amperzand}"
            Foreground="Black"
            Content="Search" 
            FontSize="10"
            HorizontalAlignment="Left" 
            Margin="359,91,0,0" 
            VerticalAlignment="Top" 
            Height="17"
            Width="43" 
            Click="SearchFoodGroup_Click" />

            <!-- Label for Ingredients input -->
            <Label Content="Ingredients" 
           HorizontalAlignment="Left"
           VerticalAlignment="Top"
           FontFamily="{StaticResource Amperzand}"
           FontSize="13"
           Foreground="LightGoldenrodYellow"
           Background="DarkRed"
           FontWeight="Normal"
           Height="24" Width="172" Margin="440,62,0,0" />

            <!-- TextBox for Ingredients input -->
            <TextBox x:Name="textboxsearchIngred" 
             HorizontalAlignment="Left" 
             FontFamily="{StaticResource Amperzand}"
             Foreground="Black"
             Height="17" 
             Margin="440,91,0,0" 
             TextWrapping="Wrap" 
             VerticalAlignment="Top" 
             Width="124" />

            <!-- Search button for Ingredients -->
            <Button x:Name="SearchIngred" 
            IsEnabled="False" 
            FontFamily="{StaticResource Amperzand}"
            Foreground="Black"
            Content="Search" 
            FontSize="10"
            HorizontalAlignment="Left" 
            Margin="569,91,0,0" 
            VerticalAlignment="Top" 
            Height="17"
            Width="43"
            Click="SearchIngred_Click" />

            <!-- Set the background image for the grid -->
            <Grid.Background>
                <ImageBrush x:Name="orange_background"
                    ImageSource="Icons/C.png"
                    Stretch="UniformToFill"/>
            </Grid.Background>
        </Grid>


        <Grid
    x:Name="gridThree" 
    Visibility="Visible" 
    HorizontalAlignment="Right" 
    Height="107" 
    Margin="0,0,0,2" 
    VerticalAlignment="Bottom" 
    Width="702">

            <!-- Button to display a single recipe -->
            <Button x:Name="btnDisplayRecipe" 
            IsEnabled="False" 
            Content="Display Recipe" 
            FontFamily="{StaticResource Amperzand}"
            FontSize="10"
            FontWeight="Light"
            Foreground="DarkGoldenrod"
            Background="LightGoldenrodYellow"
            BorderBrush="DarkGoldenrod"
            BorderThickness="2"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            Width="100" Height="26"
            Margin="10,10,0,0" 
            Click="btnDisplayRecipe_Click" />

            <!-- Button to display all recipe names -->
            <Button x:Name="btnDisplayAllNames" 
            IsEnabled="True" 
            Content="Display Recipe Names" 
            FontFamily="{StaticResource Amperzand}"
            FontSize="10"
            FontWeight="Light"
            Foreground="DarkGoldenrod"
            Background="LightGoldenrodYellow"
            BorderBrush="DarkGoldenrod"
            BorderThickness="2"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            Width="100" Height="26" Margin="120,10,0,0"
            Click="btnDisplayAllNames_Click" />

            <!-- Button to scale recipes -->
            <Button x:Name="btnScale" 
            IsEnabled="True" 
            Content="Scale" 
            FontFamily="{StaticResource Amperzand}"
            FontSize="10"
            FontWeight="Light"
            Foreground="DarkGoldenrod"
            Background="LightGoldenrodYellow"
            BorderBrush="DarkGoldenrod"
            BorderThickness="2"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            Width="100" Height="26" Margin="10,42,0,0"
            Click="btnScale_Click" />

            <!-- Button to reset recipes -->
            <Button x:Name="btnReset" 
            IsEnabled="False" 
            Content="Reset" 
            FontFamily="{StaticResource Amperzand}"
            FontSize="10"
            FontWeight="Light"
            Foreground="DarkGoldenrod"
            Background="LightGoldenrodYellow"
            BorderBrush="DarkGoldenrod"
            BorderThickness="2"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            Width="100" Height="26" Margin="120,42,0,0"
            Click="btnReset_Click" />

            <!-- Button to delete recipes -->
            <Button x:Name="btnDelete" 
            IsEnabled="False" 
            Content="Delete" 
            FontFamily="{StaticResource Amperzand}"
            FontSize="10"
            FontWeight="Light"
            Foreground="DarkGoldenrod"
            Background="LightGoldenrodYellow"
            BorderBrush="DarkGoldenrod"
            BorderThickness="2"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            Width="100" Height="26" Margin="231,10,0,0"
            Click="btnDelete_Click" />

            <!-- Button to display recipe content (hidden by default) -->
            <Button x:Name="btnDisplayRecCont" 
            Visibility="Hidden" 
            Content="Display" 
            FontFamily="{StaticResource Amperzand}"
            FontSize="16"
            FontWeight="Light"
            Foreground="DarkRed"
            Background="PaleVioletRed"
            BorderBrush="DarkRed"
            BorderThickness="2"
            VerticalAlignment="Center"
            HorizontalAlignment="Left"
            Width="114" Height="86" Margin="570,0,0,0"
            Click="btnDisplayRecCont_Click" />

            <!-- Button to scale next recipe (hidden by default) -->
            <Button x:Name="btnScaleNext" 
            Visibility="Hidden" 
            Content="Display" 
            FontFamily="{StaticResource Amperzand}"
            FontSize="16"
            FontWeight="Light"
            Foreground="DarkRed"
            Background="PaleVioletRed"
            BorderBrush="DarkRed"
            BorderThickness="2"
            VerticalAlignment="Center"
            HorizontalAlignment="Left"
            Width="114" Height="86" Margin="570,0,0,0"
            Click="btnScaleNext_Click" />

            <!-- Button to delete next recipe (hidden by default) -->
            <Button x:Name="btnDeleteNext" 
            Visibility="Hidden" 
            Content="Display" 
            FontFamily="{StaticResource Amperzand}"
            FontSize="16"
            FontWeight="Light"
            Foreground="DarkRed"
            Background="PaleVioletRed"
            BorderBrush="DarkRed"
            BorderThickness="2"
            VerticalAlignment="Center"
            HorizontalAlignment="Left"
            Width="114" Height="86" Margin="570,0,0,0"
            Click="btnDeleteNext_Click" />

            <Button x:Name="btnResetNext" 
                    Visibility="Hidden" 
                    Content="Display" 
                    FontFamily="{StaticResource Amperzand}"
                    FontSize="16"
                    FontWeight="Light"
                    Foreground="DarkRed"
                    Background="PaleVioletRed"
                    BorderBrush="DarkRed"
                    BorderThickness="2"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"
                    Width="114" Height="86" Margin="570,0,0,0" 
                    Click="btnResetNext_Click"/>

            <!-- Grid for entering recipe number (visible by default) -->
            <Grid x:Name="gridRecipeNumber" 
          Visibility="Visible" 
          HorizontalAlignment="Left" 
          Height="22" 
          Margin="336,12,0,0" 
          VerticalAlignment="Top" 
          Width="235">

                <!-- Label for entering recipe number -->
                <Label Content="Please enter the recipe number:" 
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               FontFamily="{StaticResource Amperzand}"
               FontSize="12"
               Foreground="White"
               FontWeight="Normal"
               Height="36" Width="202" Margin="2,0,0,0" />

                <!-- TextBox for entering recipe number -->
                <TextBox x:Name="textboxDisplayrecChoice" 
                 Visibility="Visible"
                 IsEnabled="True"
                 HorizontalAlignment="Right" 
                 Height="19" 
                 Margin="0,6,10,0" 
                 FontFamily="{StaticResource Amperzand}"
                 Foreground="Black"
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top" 
                 Width="66" />
            </Grid>

            <!-- Grid for entering scale factor (hidden by default) -->
            <Grid x:Name="gridScaleValue"  
          Visibility="Hidden" 
          HorizontalAlignment="Left" 
          Height="22" 
          Margin="336,46,0,0" 
          VerticalAlignment="Top" 
          Width="235">

                <!-- Label for entering scale factor -->
                <Label Content="Please enter the scale factor:" 
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               FontFamily="{StaticResource Amperzand}"
               FontSize="12"
               Foreground="White"
               FontWeight="Normal"
               Height="36" Width="202" Margin="2,0,0,0" />

                <!-- TextBox for entering scale factor -->
                <TextBox x:Name="textboxScaleNum" 
                 Visibility="Visible" 
                 HorizontalAlignment="Right" 
                 Height="19" 
                 IsEnabled="True"
                 Margin="0,6,10,0" 
                 FontFamily="{StaticResource Amperzand}"
                 Foreground="Black"
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top" 
                 Width="66" />
            </Grid>

            <!-- Background image for the grid -->
            <Grid.Background>
                <ImageBrush x:Name="pink_background"
                    ImageSource="/Icons/A.png"
                    Stretch="UniformToFill"/>
            </Grid.Background>
        </Grid>


        <Grid
    x:Name="gridFour" 
    Visibility="Visible" 
    HorizontalAlignment="Right" 
    Height="261" 
    Margin="0,136,10,0" 
    VerticalAlignment="Top" 
    Width="231">

            <!-- StackPanel for fixed heading -->
            <StackPanel x:Name="pnlFixedHeadingOne" 
                Width="231"
                Height="40"
                HorizontalAlignment="Left"
                VerticalAlignment="Top">

                <!-- TextBlock for recipe names/details heading -->
                <TextBlock x:Name="lblRecipe"
                   Text="Recipe Names/Details:" 
                   Foreground="White" 
                   FontFamily="{StaticResource Amperzand}"
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Top" 
                   FontSize="18"
                   TextDecorations="Underline"
                   Height="20"
                   Margin="0,10,0,0" />
            </StackPanel>

            <!-- ScrollViewer for displaying recipe details -->
            <ScrollViewer x:Name="scrollDisplayTwo"  
                  Height="261" 
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"
                  Width="231" 
                  HorizontalScrollBarVisibility="Auto"
                  VerticalScrollBarVisibility="Auto">

                <!-- TextBlock for displaying recipe details -->
                <TextBlock x:Name="textBlockDisplay"
                   FontSize="13"
                   FontFamily="{StaticResource Amperzand}"
                   Foreground="White"
                   FontWeight="Normal"
                   TextWrapping="Wrap" 
                   Margin="0,40,0,0" 
                   Height="500"
                   Width="500"/>
            </ScrollViewer>

            <!-- Background image for the grid -->
            <Grid.Background>
                <ImageBrush x:Name="display_panel"
                    ImageSource="/Icons/E.png"
                    Stretch="UniformToFill"/>
            </Grid.Background>
        </Grid>


        <Grid
    x:Name="gridFive" 
    Visibility="Visible" 
    HorizontalAlignment="Center" 
    Height="246" 
    VerticalAlignment="Top" 
    Width="454" Margin="0,144,0,0">

            <!-- StackPanel for fixed heading -->
            <StackPanel x:Name="pnlFixedHeadingTwo" 
                Width="454"
                Height="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Top">

                <!-- TextBlock for ingredient details heading -->
                <TextBlock x:Name="lblIngredient"
                   Text="Ingredient Details:" 
                   Foreground="White" 
                   FontFamily="{StaticResource Amperzand}"
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Top" 
                   FontSize="18"
                   TextDecorations="Underline"
                   Height="20"
                   Margin="0,10,0,0" />
            </StackPanel>

            <!-- ScrollViewer for displaying ingredient details -->
            <ScrollViewer x:Name="scrollDisplay"  
                  Height="246" 
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"
                  Width="454" 
                  HorizontalScrollBarVisibility="Auto"
                  VerticalScrollBarVisibility="Auto"
                  Margin="0,0,0,0">

                <!-- StackPanel for dynamically displaying ingredient details -->
                <StackPanel x:Name="pnlDisplay" 
                    Width="1200" 
                    Height="600"
                    Margin="0,40,0,0"/>
            </ScrollViewer>

            <!-- Background image for the grid -->
            <Grid.Background>
                <ImageBrush x:Name="stackpanel_background"
                    ImageSource="/Icons/D.png"
                    Stretch="UniformToFill"/>
            </Grid.Background>
        </Grid>

    </Grid>
</Window>

